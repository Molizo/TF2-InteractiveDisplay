<Window x:Class="IVSDClient.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVSDClient"
        mc:Ignorable="d"
        Title="Display window" Height="450" Width="800" MouseDoubleClick="Window_MouseDoubleClick">
    <Viewbox Stretch="Uniform">
    <UniformGrid x:Name="MainUniformGrid">
        <Viewbox Stretch="Uniform">
            <local:StationDisplayControl/>
        </Viewbox>
        <Viewbox Stretch="Uniform">
            <local:VehicleDisplayControl/>
        </Viewbox>
        <Viewbox Stretch="Uniform">
            <local:VehicleDisplayControl/>
        </Viewbox>
        <Viewbox Stretch="Uniform">
            <local:VehicleDisplayControl/>
        </Viewbox>
    </UniformGrid>
    </Viewbox>
</Window>
